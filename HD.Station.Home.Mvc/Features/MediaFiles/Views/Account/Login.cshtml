@model HD.Station.Home.Mvc.Features.MediaFiles.Models.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "/Features/MediaFiles/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow border-0 rounded-3">
            <div class="card-body p-4">
                <h3 class="text-center mb-4 text-primary">Đăng nhập</h3>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success text-center">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <form asp-action="Login" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input name ="Email" asp-for="Email" class="form-control" placeholder="Nhập email..." />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">Mật khẩu</label>
                        <input name="Password" asp-for ="Password" class="form-control" type="password" placeholder="Nhập mật khẩu..." />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                        <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                    </div>


                    <button type="submit" class="btn btn-primary">Đăng nhập</button>
                </form>
            </div>
        </div>
    </div>
</div>
